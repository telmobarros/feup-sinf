<!DOCTYPE html>
<html lang="en">
	
	<head>
		<% include ../../partials/head %>
		
		<% include ../../partials/post_head %>
	</head>
	
	<body class="nav-md">
		<div class="container body">
			<div class="main_container">
				<% include ../../partials/sidebar %>
				<% include ../../partials/topnav %>
				
				<div class="right_col" role="main">
					<div class="">
						<div class="page-title">
							<div class="title_left">
								<h3>Ver encomenda</h3>
							</div>
						</div>
						
						<div class="clearfix"></div>
						
						<div class="row">
							<div class="col-xs-12">
								<div class="x_panel">
									<div class="x_title">
										<h2><%= encomenda.CodEncomenda %></h2> <!-- MUDAR -->
										<ul class="nav navbar-right panel_toolbox">
											<li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
											<li><a class="close-link"><i class="fa fa-close"></i></a></li>
										</ul>
										<div class="clearfix"></div>
									</div>
									<div class="x_content">
										
										<section class="content invoice">
											<!-- title row -->
											<div class="row">
												<div class="col-xs-12 invoice-header">
													<h1>
														<i class="fa fa-globe"></i> <%= encomenda.InvoiceNo %> <!-- MUDAR -->
														<small class="pull-right"><%= encomenda.InvoiceDate %></small> <!-- MUDAR -->
													</h1>
												</div>
												<!-- /.col -->
											</div>
											<!-- info row -->
											<div class="row invoice-info">
												<div class="col-sm-4 invoice-col">
													De
													<address>
														<a href="/clientes/<%= encomenda.Entidade %>"><strong><%= encomenda.Entidade %></strong></a>
														<br>Morada: <%= encomenda.Entidade.Local %>
														<br>NIF: <%= encomenda.Entidade %>
														<br>Email: <%= encomenda.Entidade %>
													</address>
												</div>
												<div class="col-sm-4 invoice-col">
													Para
													<address>
														<strong><%= encomenda.dadosEmpresa.Nome %></strong>
														<br>Morada: <%= encomenda.dadosEmpresa.Morada %>, <%= encomenda.dadosEmpresa.Local %> <%= encomenda.dadosEmpresa.Cp %>
														<br>NIF: <%= encomenda.dadosEmpresa.NumContrib %>
														<br>Email:
													</address>
												</div>
												<!-- /.col -->
												
												<!-- /.col -->
											</div>
											<!-- /.row -->
											
											<!-- Table row -->
											<div class="row">
												<div class="col-xs-12 table">
													<table class="table table-striped table-bordered bulk_action">
														<thead>
															<tr>
																<th>Quantidade</th>
																<th>Cód. Artigo</th>
																<th style="width: 59%">Desc. Artigo</th>
																<th>Preço Unitário</th>
															</tr>
														</thead>
														<tbody>
															<% (encomenda.LinhasEnc).forEach(function(linha){ %>
															<tr>
																<td class="text-right"><%= linha.Quantidade %></td>
																<td><a href="/artigos/<%= linha.CodArtigo %>"><%= linha.CodArtigo %></a></td>
																<td><a href="/artigos/<%= linha.CodArtigo %>"><%= linha.DescArtigo %></a></td>
																<td class="text-right"><%= linha.PrecoUnitario %> &euro;</td>
															</tr>
															<% }); %>
														</tbody>
													</table>
												</div>
												<!-- /.col -->
											</div>
											<!-- /.row -->
											
											<div class="row">
												<!-- accepted payments column -->
												<div class="col-xs-6">
													<button class="btn btn-default btn-block" onclick="window.print();"><i class="fa fa-print"></i> Imprimir</button>
													<button class="btn btn-primary btn-block" style="margin-right: 5px;" disabled><i class="fa fa-download"></i> Download PDF</button>
												</div>
												<!-- /.col -->
												<div class="col-xs-6">
													<div class="table-responsive">
														<table class="table">
															<tbody>
																<tr>
																	<th>Total:</th>
																	<td class="text-right"><%= encomenda.TotalMerc %> &euro;</td>
																</tr>
															</tbody>
														</table>
													</div>
												</div>
												<!-- /.col -->
											</div>
											<!-- /.row -->
											
										</section>
									</div>
								</div>
							</div>
						</div>
						
					</div>
				</div>
				
				<!-- /page content -->
				
			</div>
			
		</div>
		
		<% include ../../partials/footer %>
		<script>
	console.log(<%- JSON.stringify(encomenda) %>);
		</script>
		<% include ../../partials/post_footer %>
	</body>
	
</html>
